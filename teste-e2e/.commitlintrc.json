{
    "plugins": [
        "@dwmt/commitlint-plugin-jira-type"
    ],
    "extends": [
        "@dwmt/commitlint-config-jira-type"
    ],
    "rules": {
        "jira-type-type-enum": [
            2,
            "always",
            [
                "ci",
                "chore",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style"
            ]
        ]
    }
}